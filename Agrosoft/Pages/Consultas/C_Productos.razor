@page "/ConsultaProductos"

@using Models
@using BLL

@inject IToastService toast;
<div class="card">
    <div class="card-header">
        <h3>Consulta de productos</h3>
    </div>

    <div class="card-body">

        <div class="row">
            @*Filtro*@
            <div class="form-group col">
                <label>Filtro</label>
                <select @bind="filtro" class="form-control">
                    <option value="0" disabled>Elija una opcion</option>
                    <option value="1">Todo</option>
                    <option value="2">ID</option>
                    <option value="3">Nombre</option>
                    <option value="4">Marca</option>
                </select>
            </div>

            @*Criterio*@
            <div class="form-group col">
                <label>Criterio</label>
                <div class="input-group">
                    <input type="text" @bind="criterio" class="form-control" />
                    <div class="input-group-append">
                        <button type="button" class="btn btn-primary input-group-text" @onclick="Consultar">
                            <span class="oi oi-zoom-in" aria-hidden="true"></span>Consultar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        

        @*Tabla*@
        @if (ListaProductos != null)
        {
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Cantidad minima</th>
                        <th>Cantidad existente</th>
                        <th>Precio</th>
                        <th>Costo</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var articulo in ListaProductos)
                    {
                        <tr>
                            <td>@articulo.ProductoId</td>
                            <td>@articulo.Nombre</td>
                            <td>@articulo.Marca</td>
                            <td>@articulo.CantidadMinima</td>
                            <td>@articulo.CantidadExistente</td>
                            <td>@articulo.Precio</td>
                            <td>@articulo.Costo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
            toast.ShowError("¡No hay articulos guardados!");

    </div>
</div>

@code {
    List<Productos> ListaProductos = new List<Productos>();

    private string filtro;
    private string criterio;

    private void Consultar()
    {
        int opcion = Convert.ToInt32(filtro);

        if (string.IsNullOrWhiteSpace(criterio))
        {
            ListaProductos = ProductosBLL.GetList(x => true);
        }
        else
        {
            switch (opcion)
            {
                case 0:
                    toast.ShowError("¡Opcion incorrecta!");
                    break;
                case 1:
                    ListaProductos = ProductosBLL.GetList(x => true);
                    break;
                case 2:
                    int id = Convert.ToInt32(criterio);
                    ListaProductos = ProductosBLL.GetList(x => x.ProductoId == id);
                    break;
                case 3:
                    ListaProductos = ProductosBLL.GetList(x => x.Nombre == criterio);
                    break;
                case 4:
                    ListaProductos = ProductosBLL.GetList(x => x.Marca == criterio);
                    break;
            }
        }
    }
}