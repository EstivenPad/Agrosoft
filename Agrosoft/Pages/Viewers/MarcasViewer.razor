@using iTextSharpBlazor.Reportes;

@if (data is { })
{
    <object data="@pdfContent" width="800" height="500"></object>
}

@code {
    [Parameter]
    public List<Marcas> listaMarcas { get; set; } = new List<Marcas>();

    byte[] data;
    string pdfContent;

    protected override void OnInitialized()
    {
        MarcasReport marcasReport = new MarcasReport();

        data = marcasReport.Reporte(listaMarcas);
        pdfContent = "data:application/pdf;base64,";
        pdfContent += System.Convert.ToBase64String(data);
    }
}
