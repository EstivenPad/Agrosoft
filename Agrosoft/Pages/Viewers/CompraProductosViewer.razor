@using iTextSharpBlazor.Reportes;

@if (data is { })
{
    <object data="@pdfContent" width="800" height="500"></object>
}

@code {
    [Parameter]
    public List<CompraProductos> listaCompraProductos { get; set; } = new List<CompraProductos>();

    byte[] data;
    string pdfContent;

    protected override void OnInitialized()
    {
        CompraProductosReport compraProductosReport = new CompraProductosReport();

        data = compraProductosReport.Reporte(listaCompraProductos);
        pdfContent = "data:application/pdf;base64,";
        pdfContent += System.Convert.ToBase64String(data);
    }
}
