            <NavLink class="nav-link" @onclick="ToggleRegistrosMenu" style="cursor:pointer">
                <i class="oi oi-file" aria-hidden="true"></i> &emsp; &emsp; Registros<span style="margin-left:31%" class=@imgRegistros></span>
            </NavLink>
